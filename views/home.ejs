<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Blogify</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <div class="d-flex justify-content-center jumbotron">
  <h1 class="display-1">Blog's</h1>
</div>
        <div class="container mt-3">
            <div class="row row-cols-4">
                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card h-100">
                            <img class="card-img-top" src="<%= blog.coverImageURL %>"
                                style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">view</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        <%- include('./partials/script') %>
</body>

</html>