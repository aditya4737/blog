<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Blog</title>
</head>

<body>
    <%- include("./partials/navbar") %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 mt-4">
                    <h1 class="display-4">
                        <%= blog.title %>
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <img src="<%= blog.coverImageURL %>" width="700px" class="img-fluid" alt="Cover Image">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mt-2">
                    <p>
                        <%= blog.body %>
                    </p>
                </div>
            </div>
        </div>
        <div class="container mt-4 mb-4">
            <img src="/<%= blog.createdBy.profileImageUrl %>" width="50px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container card-body mt-4 mb-4">
            <h1>Comments(<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <textarea name="content" class="form-control" rows="5"
                                    placeholder="Enter your comment"></textarea>
                            </div>
                            <button type="submit" class="mt-2 btn btn-primary">Post</button>
                        </div>
                    </div>
                </form>
                <% comments.forEach(comment=> { %>
                    <div class="mt-3 card">
                        <div class="mb-3">
                            <img src="/<%= comment.createdBy.profileImageUrl %>" width="50px" alt="">
                            <%= comment.createdBy.fullName %>
                            <div class="container">
                                <p class="mb-0">
                                    <%= comment.content %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    <%- include('./partials/script') %>
</body>

</html>